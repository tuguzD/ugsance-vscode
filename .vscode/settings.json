// Place your settings in this file to overwrite default and user settings.
{
	"files.exclude": {
		"**/.git": true,
		"**/.svn": true,
		"**/.hg": true,
		"**/.DS_Store": true,
		"**/Thumbs.db": true,
		"**/CVS": true,
		"out": true,
		".idea": true,
		"node_modules": true,
		".gitignore": true,
		".vscode": true,
		"markdown": true,
		".vscode-test.mjs": true,
		".vscodeignore": true,
		"eslint.config.mjs": true,
		"tsconfig.json": true
	},
	"search.exclude": {
		"out": true // set this to false to include "out" folder in search results
	},
	// Turn off tsc task auto detection since we have the necessary tasks as npm scripts
	"typescript.tsc.autoDetect": "off",
	"hide-files.files": [
		".idea",
		"node_modules",
		".gitignore",
		".vscode",
		"markdown",
		".vscode-test.mjs",
		".vscodeignore",
		"eslint.config.mjs",
		"tsconfig.json"
	],
	"cSpell.words": [
		"appservice"
	]
}
